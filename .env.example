ity# EST Backend Environment Variables
# Copy this file to .env and fill in your values

# ========== Catalog Service Database ==========
CATALOG_DATABASE_URL=postgresql://postgres:password@localhost:5432/est_catalog

# ========== Auth Service Database ==========
AUTH_DATABASE_URL=postgresql://postgres:password@localhost:5432/est_auth

# ========== JWT Configuration ==========
# IMPORTANT: Change JWT_SECRET in production!
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ========== Email Configuration ==========
# For development, these work with MailHog (local SMTP server on localhost:1025)
# For production, use SendGrid, AWS SES, or your email provider

SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@est.local

# ========== Inter-Service Communication ==========
AUTH_SERVICE_URL=http://localhost:8001
CATALOG_SERVICE_URL=http://localhost:8000

# ========== Application Environment ==========
ENV=dev
# Valid values: dev, staging, prod

# ========== Optional: Email Verification ==========
# Set to false to skip email verification in dev
EMAIL_VERIFICATION_ENABLED=true

# ========== Optional: Logging ==========
# LOG_LEVEL=INFO
# LOG_FILE=logs/app.log

# ========== Optional: Database Connection Pool ==========
# DB_POOL_SIZE=10
# DB_MAX_OVERFLOW=20
# DB_POOL_TIMEOUT=30
